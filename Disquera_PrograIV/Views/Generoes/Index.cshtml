@model IEnumerable<Disquera_PrograIV.Models.Genero>

@{
    ViewBag.Title = "Index";
}

<h2>Generos</h2>

@if (Request.IsAuthenticated && User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Crear Nuevo", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.gen_nom)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.gen_nom)
            </td>
            <td>
                @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Editar | ", "Edit", new { id = item.gen_id })
                    @*@Html.ActionLink("Details | ", "Details", new { id=item.gen_id })*@
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.gen_id })
                }
                else if (Request.IsAuthenticated && User.IsInRole("Cliente"))
                {
                    @Html.ActionLink("Ver Discos", "dis_generos", new { id = item.gen_id })
                }

            </td>
        </tr>
    }

</table>
