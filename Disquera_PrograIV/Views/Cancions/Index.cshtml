@model IEnumerable<Disquera_PrograIV.Models.Cancion>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (Request.IsAuthenticated && User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Crear Nueva", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.can_nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.can_dur)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Disco.dis_alb)
        </th>
        @if (Request.IsAuthenticated && User.IsInRole("Admin"))
        {
            <th></th>
        }
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.can_nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.can_dur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Disco.dis_alb)
            </td>
            @if (Request.IsAuthenticated && User.IsInRole("Admin"))
            {
                <td>
                    @Html.ActionLink("Editar | ", "Edit", new { id = item.can_id })
                    @*@Html.ActionLink("Detalle", "Details", new { id = item.can_id }) |*@
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.can_id })
                </td>
            }
        </tr>
    }

</table>
<p>
    @*@Html.ActionLink("Ver Discos ", "ListaDiscos")*@
    @Html.ActionLink("Volver Atrás", null, null, null, new { href = Request.UrlReferrer })
</p>